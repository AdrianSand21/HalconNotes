<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- CAPA 1: Sombra suave (simulada) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Color gris claro para sombra -->
            <corners android:radius="8dp" />
            <padding android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp"/> 
        </shape>
    </item>

    <!-- CAPA 2: El Recuadro Principal (Blanco con Borde) -->
    <item android:bottom="2dp"> <!-- Elevamos esto 2dp para dejar ver la sombra abajo -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="#9E9E9E" /> <!-- Borde gris visible -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- CAPA 3: La Flecha (Alineada a la derecha) -->
    <!-- Usamos android:drawable directamente porque ic_arrow_down es un VectorDrawable y <bitmap> fallarÃ­a -->
    <item 
        android:drawable="@drawable/ic_arrow_down"
        android:gravity="center_vertical|end" 
        android:right="16dp" 
        android:bottom="2dp"
        android:tint="#000000" /> <!-- Forzamos color NEGRO para visibilidad -->
</layer-list>